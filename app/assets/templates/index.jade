doctype
html
  head
    title testTask
    link(rel="stylesheet" href="./js/vendor/normalize.css/normalize.css")
    link(rel="stylesheet" href="./js/vendor/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="./css/styles.css")

  body
    h1 E:mg
    h2 testTask
    div(ng-app="testApp")
      div
      div(ng-controller="MainCtrl" ng-cloak)
        div(class="row center")
          div(class="btn btn-info" ng-click="setDataNull()") dataNull
          div(class="btn btn-info" ng-click="setDataNorm()") dataNorm
          div(class="btn btn-info" ng-click="setDataBig()") dataBig
          div(class="btn btn-info" ng-click="setDataSmall()") dataSmall
          div(class="btn btn-info" ng-click="setDataOnce()") dataOnce
          div(class="btn btn-info" ng-click="setDataTwice()") dataTwice

        div(balancer items="model")

        br
        div(class="well")
          div(class="container")
              div(class="row")
                div(class="col-xs-4") Result
                  div(ng-repeat="item in model" )
                    span {{ item.name }}: {{ item.percent | number:2}}
                  div Sum {{ currentSum | number:2 }}
                div(class="col-xs-4") data before modification
                  div(ng-repeat="item in currentData")
                    span {{ item }}

    script(src="./js/vendor/angular/angular.js")
    script(src="./js/vendor/underscore/underscore.js")
    script(src="./js/app.js")
    script(src="./js/controllers.js")
    script(src="./js/services.js")
    script(src="./js/directives.js")
