doctype
html
  head
    title testTask
    link(rel="stylesheet" href="./js/vendor/normalize.css/normalize.css")
    link(rel="stylesheet" href="./style.css")

  body
    h1 E:mg
    h2 testTask
    div(ng-app="testApp")
      div
      div(ng-controller="MainCtrl" ng-cloak)
        div(class="click-me" ng-click="setDataNull()") dataNull
        div(class="click-me" ng-click="setDataNorm()") dataNorm
        div(class="click-me" ng-click="setDataBig()") dataBig
        div(class="click-me" ng-click="setDataSmall()") dataSmall
        div(class="click-me" ng-click="setDataOnce()") dataOnce
        div(class="click-me" ng-click="setDataTwice()") dataTwice
        div(balancer items="model")

        br
        div Result
          br
          span defSum: {{ defSum }}
          br
          div(ng-repeat="item in model")
            span nodeName: {{ item.name }}, nodeLoad: {{ item.percent }}

    script(src="./js/vendor/angular/angular.js")
    script(src="./js/vendor/underscore/underscore.js")
    script(src="./js/test.js")
